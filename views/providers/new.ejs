<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">ADD A PROVIDER</h1>
        <div style="width: 40%; margin: 25px auto">
            <form action="/providers" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="provider name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="tuition fee (in Rands) per annum" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="add image URL">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" rows="1" name="descriptor" placeholder="provider's official descriptor"></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" rows="5" name="description" placeholder="provider description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
            </form>
            <a href="/providers ">Go Back</a>  
        </div>
    </div>
</div>
<% include ../partials/footer %>