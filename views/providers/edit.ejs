<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">EDIT <%= provider.name %></h1>
        <div style="width: 40%; margin: 25px auto">
            <form action="/providers/<%= provider._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="provider[name]" value="<%= provider.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="provider[price]" value="<%= provider.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="provider[image]" value="<%= provider.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" rows="1" name="provider[descriptor]"><%= provider.descriptor %></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" rows="5" name="provider[description]"><%= provider.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
            </form>
            <a href="/providers ">Go Back</a>  
        </div>
    </div>
</div>
<% include ../partials/footer %>