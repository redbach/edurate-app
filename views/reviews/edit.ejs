<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit your review</h1>
        <div style="width: 40%; margin: 25px auto;">
            <form action="/providers/<%= provider_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
               <div class="form-group">
                  <textarea class="form-control" type="text" rows="6" autofocus="autofocus" name="review[text]"><%= review.text %></textarea>
               </div>
               <div class="form-group">
                  <button class="btn btn-lg btn-success btn-block">Submit</button>
               </div>
            </form>
            <a href="/providers">Go Back</a>  
        </div>
    </div> <!--row-->
</div> <!--container-->
<% include ../partials/footer %>